<?xml version="1.0" encoding="utf-8"?>

<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme.Base.DayNight" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:colorBackground" tools:targetApi="upside_down_cake">
            @android:color/system_background_light
        </item>
    </style>

    <style name="AppTheme.Splash.DayNight" parent="Theme.SplashScreen">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
    </style>

    <style name="AppTheme.Splash" parent="AppTheme.Splash.DayNight">
        <item name="postSplashScreenTheme">@style/AppTheme.Base.DayNight</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
    </style>

</resources>
